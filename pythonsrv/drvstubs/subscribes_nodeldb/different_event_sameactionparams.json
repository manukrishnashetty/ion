[  
  {
    "meta" : {
      "Name" : "Test POLLCONTROL which triggers multiple times", 
      "Desc" : "First we send a publish message such that it matches an event-action relationship. We repeat similar publish messsages which would trigger an action on the same output device. The parameter values for the output device will be different. We Then send a POLLCONTROL message and confirm that we get back a CONTROL message. The returned CONTROL message will have only one Action - which corresponds to the last publish message",
      "Precondition"  : "./subscribe_entities.json"
    }
  },
  {
      "iondata" : {
        "Type" : "PUBLISH" , "Ver" : "0.8", "From" : "10.1.1.18",
        "Nid" : "Idev1", "Mid" : "Idev1004", "Time" : "$time", 
        "Key" : "keyIdev1", 
        "Data" : [{ "Name" : "LightSensor1",  "LightLevel" : 2 }]
    }
  },
  {
    "sleep": 1
  },

  {
    "iondata" : {
      "Type" : "PUBLISH" , "Ver" : "0.8", "From" : "10.1.1.18",
      "Nid" : "Idev1", "Mid" : "Idev1004", "Time" : "$time", 
      "Key" : "keyIdev1", 
      "Data" : [{ "Name" : "LightSensor1",  "LightLevel" : 1 }]
    }
  },
  {
    "sleep": 1
  },

  {
    "iondata" : {
      "Type" : "PUBLISH" , "Ver" : "0.8", "From" : "10.1.1.18",
      "Nid" : "Idev1", "Mid" : "Idev1004", "Time" : "$time", 
      "Key" : "keyIdev1", 
      "Data" : [{ "Name" : "LightSensor1",  "LightLevel" : 4 }]
    }
  },
  {
    "sleep": 1
  },
  {
    "iondata" :{
      "Type" : "POLLCONTROL", "Ver" : "0.8", "From" : "10.1.1.28",
      "Nid" : "Odev1", "Mid" : "Odev1_ctl_001", "Time" : "$rtime", 
      "Key" : "keyOdev1"
    }, 
    "exp" : [
      {
          "Verify" : { 
            "Nid": "Odev1", "Key" :"keyOdev1", "Type" : "CONTROL", "Data": [
              {"Location": "Bedroom", "Name": "Light#2", "Action": "Switch", "Parameters": {"State": false}}
            
            ]
          }, 
          "Exclude" : ["Mid", "Time", "From", "Ver"]
      }
    ]
  }
]
